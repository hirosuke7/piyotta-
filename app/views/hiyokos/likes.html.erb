<!-- 指定されたコードを貼り付けてください -->
<div class="main user-show">
  <div class="container">
    <div class="user">
      <img src="<%= "/hiyoko_images/#{@hiyoko.image_name}" %>">
      <h2><%= @hiyoko.name %></h2>
      <p><%= @hiyoko.email %></p>
      <% if @hiyoko.id == @current_user.id %>
        <%= link_to("へんしゅー", "/hiyokos/#{@hiyoko.id}/edit") %>
      <% end %>
    </div>

    <ul class="user-tabs">
      <li><%= link_to("つぶやく", "/hiyokos/#{@hiyoko.id}") %></li>
      <li class="active"><%= link_to("いいね!", "/hiyokos/#{@hiyoko.id}/likes") %></li>
    </ul>

    <!-- 変数@likesに対してeach文を用いてください -->
    <% @likes.each do |like| %>
      <!-- 変数postを定義してください -->
      <% post = Post.find_by(id: like.post_id) %>

      <div class="posts-index-item">
        <div class="post-left">
          <img src="<%= "/hiyoko_images/#{post.hiyoko.image_name}" %>">
        </div>
        <div class="post-right">
          <div class="post-user-name">
            <%= link_to(post.user.name, "/hiyokos/#{post.hiyoko.id}") %>
          </div>
          <%= link_to(post.content, "/posts/#{post.id}") %>
        </div>
      </div>
    <!-- each文のendを追加してください -->
    <% end %>
  </div>
</div>
