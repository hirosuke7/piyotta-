<div class="main user-show">
  <div class="container">
    <div class="user">
      <img src="<%= "/hiyoko_images/#{@hiyoko.image_name}" %>">
      <h2><%= @hiyoko.name %></h2>
      <p><%= @hiyoko.email %></p>
      <% if @hiyoko.id == @current_user.id %>
      <%= link_to "編集", edit_hiyoko_path%>
        <%= link_to("削除", "/hiyokos/#{@hiyoko.id}/destroy", {method: "post"}) %>
      <% end %>
    </div>

    <ul class="user-tabs">
          <li class="active"><%= link_to("投稿", "/hiyokos/#{@hiyoko.id}") %></li>
          <li><%= link_to("いいね!", "/hiyokos/#{@hiyoko.id}/likes") %></li>
    </ul>


    <% @hiyoko.posts.each do |post| %>
      <div class="posts-index-item">
        <div class="post-left">
          <img src="<%= "/hiyoko_images/#{post.hiyoko.image_name}" %>">
        </div>
        <div class="post-right">
          <div class="post-user-name">
            <%= link_to(post.hiyoko.name, "/hiyokos/#{post.hiyoko.id}") %>
          </div>
          <%= link_to(post.content, post_path(post)) %>
        </div>
      </div>
    <% end %>
  </div>
</div>
