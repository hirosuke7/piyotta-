<div class="main users-new">
  <div class="container">
    <div class="form-heading">ひよこを産む</div>
    <div class="form users-form">
      <div class="form-body">
        <% @hiyoko.errors.full_messages.each do |message| %>
        <div class="form-error">
          <%= message %>
        </div>
        <% end %>
        <%= form_with model: @hiyoko, local: true do |form| %>
        <p>おなまえ</p>
        <input name="name" value="<%= @hiyoko.name %>">
        <p>あどれす</p>
        <input name="email" value="<%= @hiyoko.email %>">
        <p>ぱすわーど</p>
        <input name="password" value="<%= @hiyoko.password %>">
        <input type="submit" value="産む">
        <% end %>
      </div>
    </div>
  </div>
</div>
